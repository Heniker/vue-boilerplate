{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ESNext", "ES6", "DOM.Iterable"],
    "downlevelIteration": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "jsx": "preserve"
  },
  "include": ["src"],
  "typeAcquisition": { "enable": true }
}
